@model List<ApplicationUser>

<style>
    .odunc-listesi {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-around;
    }

    .odunc-bilgisi {
        border: 1px solid #ddd;
        padding: 15px;
        margin: 10px;
        width: 300px;
        text-align: center;
    }

    .kitap-resmi {
        max-height: 150px;
        object-fit: cover;
        margin-bottom: 10px;
    }

    h3 {
        color: #333;
        margin-bottom: 10px;
    }

    strong {
        color: #555;
    }

    p {
        margin-bottom: 8px;
    }
</style>

<h2>Kullanıcıların Ödünç Aldığı Kitaplar</h2>

@if (Model != null && Model.Any())
{
    <div class="odunc-listesi">
        @foreach (var user in Model)
        {
            foreach (var oduncKitap in user.Odunc)
            {
                <div class="odunc-bilgisi">
                    <img src="@oduncKitap?.Kitap?.ImagePath" class="kitap-resmi" alt="Kitap Görseli">
                    <h3>@oduncKitap?.Kitap?.KitapAdi</h3>
                    <p><strong>Ödünç Alan Kullanıcı:</strong> @oduncKitap?.Kullanici?.UserName</p>
                    <p><strong>Ödünç Aldığı Tarih ve Saat:</strong> @oduncKitap?.OduncAlmaTarihi</p>
                </div>
            }
        }
    </div>
}
else
{
    <p>Kullanıcı ödünç kitap almamıştır.</p>
}
