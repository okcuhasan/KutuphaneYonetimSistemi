@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>Hoş Geldiniz - Kütüphane Sistemi 2024</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f8f9fa;
            color: #495057;
        }

        .container {
            text-align: center;
            padding: 100px;
        }

        .display-4 {
            color: #007bff;
            font-weight: bold;
            letter-spacing: 2px;
        }

        p {
            color: #6c757d;
            font-size: 18px;
        }

        a {
            color: #007bff;
            text-decoration: none;
            font-weight: bold;
        }

            a:hover {
                text-decoration: underline;
            }

        .btn-custom {
            background-color: #007bff;
            color: #ffffff;
            padding: 10px 20px;
            font-size: 16px;
            border-radius: 5px;
            transition: background-color 0.3s ease;
            text-decoration: none; /* Butonun varsayılan altçizgilerini kaldırın */
            display: inline-block; /* Butonun içeriğine uygun genişlik ayarı yapın */
            border: 2px solid #007bff; /* Kenarlık ekleyin */
        }

            .btn-custom:hover {
                background-color: #0056b3;
                color: #ffffff;
                text-decoration: none; /* Hover durumunda altçizgiyi kaldırın */
            }

            .btn-custom:active {
                background-color: #0056b3;
                color: #ffffff;
                box-shadow: none; /* Tıklanma durumunda gölgeyi kaldırın */
                transform: translateY(2px); /* Tıklanma durumunda butonu biraz aşağıya hareket ettirin */
            }

    </style>
</head>

<body>

    <div class="container">
        <h1 class="display-4">Hoş Geldiniz</h1>
        <p><a href="">Kütüphane Yönetim Sistemi - 2024</a></p>
        <a href="#" class="btn btn-custom">Daha Fazla Bilgi</a>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
   
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>

</html>
